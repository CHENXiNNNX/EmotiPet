menu "EmotiPet Assets 配置"

    config ENABLE_ASSETS_BUILD
        bool "启用 Assets 构建"
        default n
        help
            启用从 ESP-SR 模型自动构建 assets.bin。
            如果禁用，将不会自动构建 assets.bin。

    if ENABLE_ASSETS_BUILD
        config ASSETS_MODELS
            string "模型列表（支持多种类型）"
            default "vadnet1_medium nsnet1"
            help
                要包含在 assets.bin 中的模型名称列表（空格分隔）。
                支持自动识别模型类型：
                - WakeNet: wn9_*, wn8_* (唤醒词检测)
                - VADNet: vadnet* (语音活动检测，用于 AFE)
                - NSNet: nsnet* (噪声抑制，用于 AFE)
                - MultiNet: mn*_cn, mn*_en (语音命令识别)
                
                示例:
                - "vadnet1_medium nsnet1" (用于 AFE)
                - "mn6_cn mn6_en" (用于语音命令识别)
                - "vadnet1_medium nsnet1 mn6_cn" (混合使用)

        config ASSETS_CN_WAKE_WORD
            string "中文唤醒词"
            default ""
            help
                中文唤醒词命令（拼音格式，例如: "ni hao xiao zhi"）。
                留空以禁用默认中文唤醒词。
                唤醒词可以在运行时动态添加。

        config ASSETS_EN_WAKE_WORD
            string "英文唤醒词"
            default ""
            help
                英文唤醒词命令（例如: "hello"）。
                留空以禁用默认英文唤醒词。
                唤醒词可以在运行时动态添加。

        config ASSETS_WAKE_WORD_THRESHOLD
            string "唤醒词检测阈值"
            default "0.2"
            help
                唤醒词检测阈值（0.0 到 1.0，字符串格式）。
                值越小 = 越敏感，值越大 = 越不敏感。
                示例: "0.2" 或 "0.15"
    endif

endmenu
