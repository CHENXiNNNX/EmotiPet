menu "EmotiPet Assets 配置"

    config ENABLE_ASSETS_BUILD
        bool "启用 Assets 构建"
        default y
        help
            启用从 ESP-SR 模型自动构建 assets.bin。
            如果禁用，将不会自动构建 assets.bin。

    if ENABLE_ASSETS_BUILD
        config ASSETS_MULTINET_MODELS
            string "Multinet 模型列表"
            default "mn6_cn mn6_en"
            help
                要包含在 assets.bin 中的 Multinet 模型名称列表（空格分隔）。
                示例: "mn6_cn mn6_en" 或 "mn7_cn mn7_en"    
                可用模型: mn6_cn, mn6_en, mn7_cn, mn7_en 等

        config ASSETS_CN_WAKE_WORD
            string "中文唤醒词"
            default ""
            help
                中文唤醒词命令（拼音格式，例如: "ni hao xiao zhi"）。
                留空以禁用默认中文唤醒词。
                唤醒词可以在运行时动态添加。

        config ASSETS_EN_WAKE_WORD
            string "英文唤醒词"
            default ""
            help
                英文唤醒词命令（例如: "hello"）。
                留空以禁用默认英文唤醒词。
                唤醒词可以在运行时动态添加。

        config ASSETS_WAKE_WORD_THRESHOLD
            string "唤醒词检测阈值"
            default "0.2"
            help
                唤醒词检测阈值（0.0 到 1.0，字符串格式）。
                值越小 = 越敏感，值越大 = 越不敏感。
                示例: "0.2" 或 "0.15"
    endif

endmenu